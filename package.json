{
	"name": "shopping-cart",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"start": "react-scripts start",
		"build": "react-scripts build",
		"test": "react-scripts test",
		"test:all": "react-scripts test --coverage --watchAll=false",
		"lint": "eslint src/**/*.{js,jsx,test.js}"
	},
	"dependencies": {
		"@reach/router": "1.2.1",
		"@reduxjs/toolkit": "1.2.3",
		"@testing-library/jest-dom": "4.2.4",
		"@testing-library/react": "9.4.0",
		"@testing-library/user-event": "7.2.1",
		"downshift": "4.0.7",
		"react": "16.12.0",
		"react-dom": "16.12.0",
		"react-redux": "7.1.3",
		"react-scripts": "3.4.0",
		"sanitize.css": "11.0.0",
		"styled-components": "5.0.0"
	},
	"devDependencies": {
		"eslint": "6.8.0",
		"eslint-config-prettier": "6.9.0",
		"eslint-plugin-prettier": "3.1.2",
		"husky": "4.2.3",
		"lint-staged": "10.0.8",
		"prettier": "1.19.1"
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"jest": {
		"collectCoverageFrom": [
			"src/**/*.{js,jsx}",
			"!src/index.js",
			"!src/serviceWorker.js",
			"!src/App.jsx",
			"!src/store/index.js",
			"!src/**/styled.js",
			"!<rootDir>/node_modules/"
		],
		"coverageThreshold": {
			"global": {
				"statements": 75,
				"branches": 75,
				"functions": 75,
				"lines": 75
			}
		}
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,jsx}": "eslint --fix"
	}
}
