{
	"compilerOptions": {
		"lib": ["ESNext"],
		"skipLibCheck": true,
		"moduleResolution": "node",
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"removeComments": true,
		"sourceMap": true,
		"target": "ES2020",
		"outDir": "lib",
		"baseUrl": "src",
		"strict": true
	},
	"include": ["src", "serverless.ts"],
	"ts-node": {
		"require": ["tsconfig-paths/register"]
	}
}
